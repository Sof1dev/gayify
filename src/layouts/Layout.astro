---
interface Props {
    title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.webp" />
        <meta name="generator" content={Astro.generator} />

        <meta
            data-hid="description"
            name="description"
            content="Gay-ify your images with just 2 clicks 🏳️‍🌈 !"
        />
        <meta
            name="twitter:title"
            property="twitter:title"
            content="Gay-ify your images"
        />
        <meta
            name="twitter:description"
            property="twitter:description"
            content="Gay-ify your images with just 2 clicks 🏳️‍🌈 !"
        />
        <meta
            name="twitter:image"
            property="twitter:image"
            content="https://pfp.lgbt/pride.png"
        />
        <meta name="og:type" property="og:type" content="article" />
        <meta
            name="og:title"
            property="og:title"
            content="Gay-ify your images"
        />
        <meta
            name="og:description"
            property="og:description"
            content="Gay-ify your images with just 2 clicks 🏳️‍🌈 !"
        />
        <meta
            name="og:image"
            property="og:image"
            content="https://pfp.lgbt/pride.png"
        />
        <meta
            name="og:site_name"
            property="og:site_name"
            content="gayify.vercel.app"
        />
        <meta name="og:url" property="og:url" content="gayify.vercel.app" />

        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>
